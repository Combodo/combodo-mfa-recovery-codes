<div class="col-sm-12">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">{{ 'MFA:RC:Config:Title'|dict_s }}</h3>
		</div>
		<div class="panel-body">
			<div class="form_alerts">
				<div class="alert alert-success" role="alert" style="display: none;"></div>
				<div class="alert alert-warning" role="alert" style="display: none;"></div>
				<div class="alert alert-error alert-danger" role="alert" style="display: none;"></div>
			</div>

			<div class="form_field_label">
				<label class="control-label">{{ 'MFA:RC:Settings:Code:label'|dict_s }}</label>
			</div>
			<pre>{{ aData.sCodes }}</pre>

			<div class="form_btn_regular">
				<input class="btn btn-primary form_btn_submit" type="submit" value="{{ 'MFA:RC:RebuildCodes'|dict_s }}" data-tooltip-content="{{ 'MFA:RC:RebuildCodes+'|dict_s }}">
			</div>
		</div>
	</div>
</div>


